<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - OwaspA01</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link asp-append-version="true" href="~/css/site.css" rel="stylesheet" />
    <link asp-append-version="true" href="~/OwaspA01.styles.css" rel="stylesheet" />
</head>
<body>
<header>
    <nav class="bg-white border-bottom box-shadow mb-3 navbar navbar-expand-sm navbar-light navbar-toggleable-sm">
        <div class="container-fluid">
            <a asp-area="" asp-page="Index" class="navbar-brand">OwaspA01</a>
            <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target=".navbar-collapse"
                    data-bs-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse d-sm-inline-flex justify-content-between navbar-collapse">
                <ul class="flex-grow-1 navbar-nav">
                    <li class="nav-item">
                        <a asp-area="" asp-page="Index" class="nav-link text-dark">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-page="Privacy" class="nav-link text-dark">Privacy</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main class="pb-3" role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Salversij
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script asp-append-version="true" src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
